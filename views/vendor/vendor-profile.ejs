<%- include ("../partials/head.ejs") %>
<style>
  main {
    padding: 48px 0;
  }

  .wrapper {
    max-width: 180px;
    margin-inline: auto;
    margin-bottom: 32px;
  }

  .ratio-div {
    position: relative;
    padding-top: 100%;
  }

  .ratio-div img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }

  .vendor-business-name {
    font-size: 48px;
    text-transform: capitalize;
    margin-bottom: 24px;
  }

  .vendor-business-address {
    font-size: 20px;
    margin-bottom: 16px;
  }

  @media (max-width: 372px) {
    .vendor-business-name {
      font-size: 32px;
      text-transform: capitalize;
      margin-bottom: 24px;
    }
  }
</style>
<body>
  <%- include ("../partials/vendor-header.ejs") %>
  <!-- Main content -->
  <main>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-3 col-lg-2">
          <div class="wrapper">
            <div class="ratio-div">
              <% if (vendor.imgSrc) { %>
                <img src="<%= vendor.imgSrc %>" alt="<%= vendor.businessName%> avatar"/>
              <% } else { %>
                <img src="/images/avatar_default.png" alt="<%= vendor.businessName%> avatar"/>
              <% } %>
            </div>
          </div>
          
        </div>
        <div class="col-sm-12 col-md-9 col-lg-10">
          <div class="vendor-business-name"><%= vendor.businessName%></div>
          <div class="vendor-business-address">
            Business address: <%= vendor.businessAddress%>
          </div>

          <a href="/vendor/profile/edit">Edit profile</a>
          <br>
          <br>

          <a href="/logout">Logout</a>

        </div>
      </div>
    </div>
    

    
  </main>
  <!-- Footer -->
  <%- include ('../partials/footer.ejs') %>
</body>
</html>