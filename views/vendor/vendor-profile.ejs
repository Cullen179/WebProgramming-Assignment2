<%- include ("../partials/head.ejs") %> 
<body>
  <%- include ("../partials/vendor-header.ejs") %>
  <!-- Main content -->
  <main class="indent my-5">

    <!-- Main Content -->
    <div class="account-container">
      <div class="account-img-section">
        <% if (vendor.imgSrc) { %>
          <img class="account-img" src="<%= vendor.imgSrc %>" alt="<%= vendor.username %> avatar">
        <% } else { %>
          <img class="account-img" src="/images/avatar_default.png" alt="<%= user.username %> avatar">
        <% } %>
        <!-- <button
          type="button"
          class="btn btn-link"
          data-bs-toggle="modal"
          data-bs-target="#uploadImage"
        >
          Change
        </button> -->
      </div>
      <div class="account-info-section">
         <!-- Breadcrumb -->
         <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">My Account</li>
          </ol>
        </nav>
        <div class="account-title d-flex align-items-center mb-4">
          <h1>
            My Account
          </h1>
          <form action="/logout" method="GET">
            <button id="logout-btn" type="submit" class="btn btn-primary ms-4">Logout</button>
          </form>
        </div>

        <form action="/vendor/profile?_method=PUT" enctype="multipart/form-data" method="POST">
          <fieldset>
            <div class="mb-4">
              <label for="vendorUsername" class="form-label">Username</label>
              <input type="text" value="<%= user.username %>" class="form-control" id="vendorUsername" disabled>
            </div>
            <div class="mb-4">
              <label for="businessName" class="form-label">Business Name</label>
              <input type="text" value="<%= vendor.businessName %>" class="form-control" id="businessName" disabled>
            </div>
            <div class="mb-4">
              <label for="businessAddress" class="form-label">Business Address</label>
              <input type="text" value="<%= vendor.businessAddress %>" class="form-control" id="businessAddress" disabled>
            </div>
            <div>
              <a class="btn btn-primary" href="/profile/edit">Edit profile</a>
            </div>

            <!-- <button id="update-profile-btn" type="submit" class="btn btn-primary mt-3 float-end" disabled>Update profile</button> -->
          </fieldset>
        </form>
      </div>
    </div>
  </main>
  <%- include ('../partials/footer.ejs') %>
</body>
</html>
