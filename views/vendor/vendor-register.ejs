<%- include ("../partials/head.ejs") %>
<body>
  <main class="min-vh-100 w-100 p-5 d-flex justify-content-center align-items-center">
    <section class="border shadow d-flex flex-md-row col-md-10 flex-column rounded overflow-hidden">
      <div class="banner col-md-6">
        <img src='/images/login-banner.jpg' class="w-100 h-100" alt="banner">
      </div>
      <form action="/vendor/register" method="post" class="col-md-6 px-5">
        <div class="form-title text-center py-4">
          <h2>Vendor Registration</h2>
        </div>
        <div class="username mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" placeholder="Name" name="username" id="username">
        </div>
        <div class="password mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" placeholder="Password" id="password" name="password">
        </div>
        <div class="profile-picture mb-3">
          <label for="picture" class="form-label">Profile Picture</label>
          <input type="file" class="form-control" name="picture" id="picture">
        </div>
        <div class="business-name mb-3">
          <label for="business-name" class="form-label">Business Name</label>
          <input type="text" class="form-control" placeholder="Business Name" name="businessName" id="businessName">
        </div>
        <div class="business-address mb-3">
          <label for="business-address" class="form-label">Business Address</label>
          <input type="text" class="form-control" placeholder="Business Address" name="businessAddress" id="businessAddress">
        </div>
        <div class="form-btn mb-4 float-end">
          <button class="btn btn-secondary">Cancel</button>
          <button class="btn btn-primary">Register</button>
        </div>
      </form>
    </section>
  </main>
  <script type="module" src="/js/password-validator.js"></script>
</body>
</html>
