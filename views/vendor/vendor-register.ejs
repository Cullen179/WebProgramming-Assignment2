<%- include ("../partials/head.ejs") %>
<body>
  <main class="min-vh-100 w-100 p-5 d-flex justify-content-center align-items-center">
    <section class="border shadow d-flex flex-md-row col-md-10 flex-column rounded overflow-hidden">
      <div class="banner col-md-6">
        <img src='/images/login-banner.jpg' class="w-100 h-100" alt="banner">
      </div>
      <form action="/vendor/register" method="post" enctype="multipart/form-data" class="col-md-6 px-5">
        <div class="form-title text-center py-4">
          <h2>Vendor Registration</h2>
        </div>
        <div class="username mb-4">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" placeholder="Name" name="username" id="username" required>
        </div>
        <div class="password mb-4">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" placeholder="Password" id="password" name="password" required>
        </div>
        <div class="profile-picture mb-4">
          <label for="picture" class="form-label">Profile Picture</label>
          <input type="file" class="form-control" name="picture" id="picture">
        </div>
        <div class="business-name mb-4">
          <label for="business-name" class="form-label">Business Name</label>
          <input type="text" class="form-control" placeholder="Business Name" name="businessName" id="businessName" required>
        </div>
        <div class="business-address mb-4">
          <label for="business-address" class="form-label">Business Address</label>
          <input type="text" class="form-control" placeholder="Business Address" name="businessAddress" id="businessAddress" required>
        </div>
        <div class="form-btn mb-4 float-end">
          <button class="btn btn-secondary" type='button' id="back-to-login">Back to Login</button>
          <button class="btn btn-primary" id="submit" type="button" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="Please fill in the form correctly">Register</button>
        </div>
      </form>
    </section>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  <script>
    var userData = '<%- JSON.stringify(users)%>';
    var vendorData = '<%- JSON.stringify(vendors)%>';
  </script>
  <script type="module" src="/js/field-validator.js"></script>
</body>
</html>
