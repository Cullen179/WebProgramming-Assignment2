<%- include ("../partials/head.ejs") %>
<%- include ("../partials/header.ejs") %>
<body>
    <!-- Main content -->
    <main class="row w-100 m-0 indent d-flex flex-md-row flex-column align-items-md-start justify-content-md-center mt-5">
        <h1 class="text-center bold">View My Products</h1>
        <div class="product-display row w-100 mb-5 mx-0 p-0 gx-5 d-flex justify-content-md-start justify-content-center">
            <% for (let i = 0; i < products.length; i++) { %>
                <div class="product-container p-0 my-5 bg-white rounded-4">
                    <div class="product-image rounded mb-4 position-relative">
                        <a class="img-link" href="/product/<%= products[i].id %>/edit">
                            <div class="ratio-div">
                                <img src="<%= products[i].imgSrc %>" alt="radish">
                            </div>
                        </a>
                        <div class="position-absolute badge price rounded-3 bg-black text-white bold fs-5 border border-5 border-white pe-3">$ <%= products[i].price %></div>
                        <!-- <a href="" class="product-price"><i class="bi bi-cart-fill position-absolute d-flex align-items-center fs-4"></i></a> -->
                    </div>
                    <div class="product-info pb-2 px-4">
                        <div class="card-title fs-5 bold">
                            <span href="" class="product-name"><%= products[i].name %></span>
                        </div>
                        <div class="product-quantity mb-2 d-flex justify-content-between align-items-center">
                            <div class="fs-6 text-muted">Quantity: <%= products[i].quantity %></div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>   
    </main>
    <!-- Main content -->
    <%- include ('../partials/footer.ejs') %>

    <style>
        .img-link {
            display: block;
            padding: 42px 0;
        }
        .ratio-div {
            position: relative;
            padding-top: 70%;
            width: 100%;
        }
        .ratio-div img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</body>
</html>
