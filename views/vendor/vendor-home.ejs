<%- include ("../partials/head.ejs") %>
<%- include ("../partials/header.ejs") %>
<body>
    <div class="hero-section carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/Vendor-banner.png" class="d-block w-100" height="600px">
            <div class="carousel-caption d-block">
              <h1>Vendor Home Page</h1>
              <p>Your personalized dashboard for managing and optimizing your product portfolio</p>
            </div>
          </div>
        </div>
    </div>
    <!-- Main content -->
    <main class="row w-100 m-0 indent d-flex xalign-items-md-start justify-content-md-center mt-5">
        <h1 class="text-center bold">View My Products</h1>
        <div class="product-display row w-100 mb-5 mx-0 p-0 gx-5 d-flex justify-content-md-start justify-content-center">
            <% for (let i = 0; i < products.length; i++) { %>
                <div class="product-container col-lg-3 col-md-5 col-12 p-0 my-5 bg-white rounded-4">
                    <div class="product-image rounded mb-4 position-relative">
                            <a href="/product/<%= products[i].id %>/edit" class="img-link">
                                <img src="<%= products[i].imgSrc %>" alt="">
                            </a>
                            <div class="position-absolute badge price rounded-3 bg-black text-white bold fs-5 border border-5 border-white pe-3">$<%= products[i].price %></div>
                    </div>
                    <div class="product-info pb-2 px-4">
                        <div class="card-title fs-5 bold">
                            <div href="" class="product-name"><%= products[i].name %></div>
                        </div>
                        <div class="product-quantity mb-2 d-flex justify-content-between align-items-center">
                            <div class="fs-6 text-muted">Quantity: <%= products[i].quantity %></div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>   
    </main>
    <!-- Main content -->
    <%- include ('../partials/footer.ejs') %>
</body>
</html>
