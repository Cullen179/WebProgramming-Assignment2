<%- include ("../partials/head.ejs") %> 
  <body>
    <%- include ("../partials/shipper-header.ejs") %>
    <!-- Main content -->
    <main class="indent my-5">
  
      <!-- Main Content -->
      <div class="account-container">
        <div class="account-img-section">
          <% if (vendor.imgSrc) { %>
            <img class="account-img" src="<%= vendor.imgSrc %>" alt="<%= vendor.username %> avatar">
          <% } else { %>
            <img class="account-img" src="/images/avatar_default.png" alt="<%= user.username %> avatar">
          <% } %>
        </div>
        <div class="account-info-section">
           <!-- Breadcrumb -->
           <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item" ><a href="/vendor/profile">My Account</a></li>
              <li class="breadcrumb-item active" aria-current="page">Edit Profile</li>
              
            </ol>
          </nav>
          <div class="account-title d-flex align-items-center mb-4">
            <h1>
              My Account
            </h1>
          </div>
  
          <form action="/vendor/profile/edit?_method=PUT" enctype="multipart/form-data" method="POST">
            <fieldset>
              
              <% if (nameError != '' || addressError != '') { %>            
                  <div class="alert alert-danger">
                      <% if (nameError != '') { %>
                        <p><%= nameError %></p>
                      <% } %>

                      <% if (addressError != '') {%>
                        <p><%= addressError %></p>
                      <% } %>
                  </div>
              <% } %>  
              <div class="mb-4">
                <label for="picture" class="form-label">Profile Picture</label>
                <input type="file" class="form-control" name="picture" id="picture">
              </div>
              <div class="mb-4">
                <label for="businessname" class="form-label">Business Name</label>
                <input type="text" value="<%= vendor.businessName %>" class="form-control" id="businessname" name="businessname" required>
              </div>
              <div class="mb-4">
                <label for="businessaddress" class="form-label">Business Address</label>
                <input type="text" value="<%= vendor.businessAddress %>" class="form-control" id="businessaddress" name="businessaddress" required>
              </div>
              <div class="d-flex justify-content-start">
                <button id="submit" class="btn btn-primary" type="button" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="right">Update</button>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </main>
    <%- include ('../partials/footer.ejs') %>
    <script src="/js/retrieve-img.js"></script>
    <script src="/js/profile-validator.js"></script>
  </body>
  </html>
