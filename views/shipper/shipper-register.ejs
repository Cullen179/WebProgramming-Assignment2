<%- include ("../partials/head.ejs") %>
<body>
  <main class="min-vh-100 w-100">
    <section class="row w-100 min-vh-100 d-flex flex-lg-row flex-column shadow overflow-hidden m-0">
      <div class="banner col-lg-6 col-12 p-0">
        <img src='/images/shipper-registration.jpg' class="w-100 h-100" alt="banner">
      </div>
      <form action="/shipper/register" method="post" enctype="multipart/form-data" class="col-lg-6 col-12 px-5 d-flex flex-column justify-content-center">
        <div class="form-title py-4">
          <h1><strong>Shipper Registration</strong></h1>
        </div>
        <div class="username mb-4">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" placeholder="Name" name="username" id="username" required>
        </div>
        <div class="password mb-4">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" placeholder="Password" id="password" name="password" required>
        </div>
        <div class="profile-picture mb-4">
          <label for="picture" class="form-label">Profile Picture</label>
          <input type="file" class="form-control" name="picture" id="picture">
        </div>
        <div class="hub mb-4">
          <label for="hub" class="form-label">Distributed Hub</label>
          <select class="form-select" name="hub" id="hub" required>
            <% hubs.forEach(hub => {%>
            <option value="<%= hub._id %>"><%= hub.name %> [Address: <%= hub.address %>]</option>
            <% }) %>
          </select>
        </div>
        <div class="form-btn mt-3 mb-3 d-flex justify-content-start">
          <button class="custom-form-button me-4" id="submit" type="button" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="Please fill in the form correctly">Register</button>
          <button class="btn btn-primary back-to-login" type='button' id="back-to-login">Back to Login</button>
        </div>
      </form>
    </section>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  <script>
    var userData = '<%- JSON.stringify(users)%>';
  </script>
  <script type="module" src="/js/field-validator.js"></script>
</body>
</html>
