<%- include ("../partials/head.ejs") %>
<body>
    <%- include ("../partials/shipper-header.ejs") %>
    <!-- Main content -->
    <main class= "indent">
        <div class="ordered-items-container container px-5 mt-5 mb-5 bg-white shadow rounded rounded-4 border border-1">
            <div class="ordered-items-header py-3 d-flex justify-content-start">
                <div class="title product">
                    <h3>Order<span class="text-secondary ps-3">#<%= order._id %></span></h3>
                </div>
            </div>

            <% order.productDetails.forEach(product => { %>
                <div class="product-list border-top border-bottom py-3">
                    <div class="product row w-100 mx-0 py-3 d-flex justify-content-between">
                        <div class="product-image col-md-2 col-4 px-0 border rounded rounded-4 overflow-hidden">
                            <img src="<%= product.imgSrc %>">
                        </div>
                        <div class="col-md-5 col-7 d-flex flex-column justify-content-center">
                            <div class="product-name fs-lg-5 fs-6 bold"><%= product.name %></div>
                        </div>
                        <div class="quantity col-md-1 col-2 d-flex fs-lg-5 fs-6 mt-md-0 mt-2 justify-content-start align-items-center text-secondary">
                            <div class="border px-3 py-1">1</div>
                        </div>
                        <div class="equation col-md-2 col-6 d-flex fs-lg-5 fs-6 mt-md-0 mt-2 justify-content-start align-items-center">
                            <div class="pe-lg-3 pe-1">$<%= product.price %></div> x <div class="ps-lg-3 ps-1">1</div>
                        </div>
                        <div class="price col-md-1 col-2 p-0 bold d-flex fs-lg-5 fs-6 mt-md-0 mt-2 justify-content-end align-items-center">
                            $<%= product.price %>
                        </div>
                    </div>
                </div>
            <% }) %>
            <div class="ordered-items-footer my-2">
                <div class="product row w-100 mx-0 py-3 d-flex justify-content-between">
                    <div class="col-md-2 status-update-up">
                        <form method="post" action="/" class="status-update d-flex justify-content-start">
                            <input type="hidden" name="_method" value="PUT">
                            <input type="hidden" name="orderID" id="orderID" value="<%= order._id %>">
                            <input type="hidden" name="orderAction" id="orderAction">
                            <button type="submit" value="delivered" id="deliver" class="btn btn-success me-4 border border-0">Deliver</button>
                            <button type="submit" value="canceled" id="cancel" class="btn btn-secondary border border-0">Cancel</button>
                        </form>
                    </div>
                    <div class="col-md-5 col-0">
                    </div>
                    <div class="col-md-1 col-0">
                    </div>
                    <div class="fee col-2 bold d-flex fs-lg-5 fs-6 justify-content-start align-items-center">
                        Total
                    </div>
                    <div class="price col-md-1 col-3 bold d-flex fs-lg-5 fs-6 justify-content-end align-items-center">
                        $<%= order.price %>
                    </div>
                    <div class="w-100 pt-4 status-update-down">
                        <form method="post" action="/" class="status-update d-flex justify-content-end">
                                <input type="hidden" name="_method" value="PUT">
                            <input type="hidden" name="orderID" id="orderID" value="<%= order._id %>">
                            <input type="hidden" name="orderAction" id="orderAction">
                            <button type="submit" value="canceled" id="cancel" class="btn btn-secondary border border-0">Cancel</button>
                            <button type="submit" value="delivered" id="deliver" class="btn btn-success border border-0 ms-3">Deliver</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="customer-detail container px-5 mt-5 pb-3 mb-5 bg-white shadow rounded rounded-4 border border-1">
            <div class="ordered-items-header d-flex justify-content-between">
                <div class="title">
                    <h3 class="py-3">Customer Details</h3>
                </div>
            </div>
            <div class="info-list border-top pt-3">
                <div class="product row w-100 mx-0 py-3">
                    <div class="row d-flex mb-2 justify-content-start">
                        <i class="order-icon bi bi-person-fill ps-0 pt-md-0 pe-4"></i>
                        <div class="customer-name fs-md-5 fs-6 p-0"><%= order.customer.name %></div>
                    </div>
                    <div class="row d-flex mb-2 justify-content-start">
                        <i class="order-icon bi bi-geo-alt-fill ps-0 pt-md-0 pe-4"></i>
                        <div class="customer-destination fs-md-5 fs-6 p-0"><%= order.customer.address %></div>
                    </div>
                    <div class="row d-flex mb-2 justify-content-start">
                        <i class="order-icon bi bi-calendar-date-fill ps-0 pt-md-0 pe-4"></i>
                        <div class="customer-destination fs-md-5 fs-6 p-0"><%= order.createdAt %></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Main content -->
    <%- include ('../partials/footer.ejs') %>
    <script src="/js/update-order.js"></script>
</body>
</html>
