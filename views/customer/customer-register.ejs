    <title></title>
  </head>
  <body>
    <main class="min-vh-100 d-flex justify-content-center align-items-center">
      <section class="border shadow p-5">
        <form action="/customer/register" method="post">
          <div class="username">
            <label for="" class="form-label">Username</label>
            <input type="text" class="form-control" placeholder="Name" id="username" name="username"/>
          </div>
          <div class="password">
            <label for="" class="form-label">Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password"/>
          </div>
          <div class="profile-picture">
            <label for="" class="form-label">Profile Picture</label>
            <input type="file" class="form-control" placeholder="Name" />
          </div>
          <div class="name">
            <label for="" class="form-label">Name</label>
            <input type="text" class="form-control" placeholder="Name" />
          </div>
          <div class="address">
            <label for="" class="form-label">Address</label>
            <input type="text" class="form-control" placeholder="Address" />
          </div>
          <div class="form-btn">
            <button class="btn btn-secondary">Cancel</button>
            <button class="btn btn-primary">Register</button>
          </div>
        </form>
      </section>
    </main>
